<%= form_with model:@post,local:true do |f| %>
<%#= render 'layouts/errors', obj: @book %>

  <div class="container py-3">
    <div>
    <%= f.label :title %>
    </div>
    <%= f.text_field :title %>
  </div>
  <div class="container">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>
  <div class="container">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Comment</th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title,post_path(post) %></td>
        <td><%=post.comment %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>


